<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.editor.CodeEditorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/GitHubToolbar"
            app:title="@string/editor_title"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/editor_menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- File Info Bar -->
        <LinearLayout
            android:id="@+id/fileInfoBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:background="@color/surface_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/fileNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.GitHub.Headline2"
                android:textColor="@color/text_primary"
                tools:text="main.py" />

            <TextView
                android:id="@+id/lineCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.GitHub.Caption"
                android:textColor="@color/text_secondary"
                tools:text="Lines: 42" />

            <TextView
                android:id="@+id/modifiedIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="●"
                android:textAppearance="@style/TextAppearance.GitHub.Caption"
                android:textColor="@color/warning"
                android:visibility="gone"
                tools:text="●" />

        </LinearLayout>

        <!-- Code Editor -->
        <FrameLayout
            android:id="@+id/editorContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:background="@color/surface_1"
            app:layout_constraintBottom_toTopOf="@+id/bottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fileInfoBar">

            <!-- We'll use a custom code editor view here -->
            <com.github.easymobile.ui.editor.CodeEditorView
                android:id="@+id/codeEditor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Line numbers will be drawn by the custom view -->

            <!-- Loading overlay -->
            <LinearLayout
                android:id="@+id/loadingOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/surface_1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textAppearance="@style/TextAppearance.GitHub.Body1"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Save indicator -->
            <TextView
                android:id="@+id/saveIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/save_indicator_background"
                android:padding="8dp"
                android:text="@string/editor_saved"
                android:textAppearance="@style/TextAppearance.GitHub.Caption"
                android:textColor="@color/success"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Bottom Action Bar -->
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomBar"
            style="@style/Widget.Material3.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/surface_2"
            app:hideOnScroll="true"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <!-- Left Actions -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveAndCloseButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/editor_save_and_close"
                    style="@style/GitHubButton" />

                <!-- Right Action -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/editor_close"
                    android:textAllCaps="true"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/border"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>